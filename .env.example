# Database (POSTGRES_PORT is the host port; container listens on 5432 internally)
POSTGRES_PORT=5433
DATABASE_URL=postgresql://kalix:kalix@localhost:5433/kalix_diary
POSTGRES_USER=kalix
POSTGRES_PASSWORD=kalix
POSTGRES_DB=kalix_diary

# API Server
API_PORT=3010
API_HOST=0.0.0.0

# Web (dev server / Docker host port)
WEB_PORT=3011

# JWT Auth (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_generate_a_secure_random_string

# Service Token for n8n (generate with: openssl rand -base64 32)
SERVICE_TOKEN=CHANGE_ME_generate_a_secure_random_string

# Frontend
VITE_API_URL=http://localhost:3010
VITE_WS_URL=ws://localhost:3010/ws

# Default timezone for new users
DEFAULT_TIMEZONE=Europe/Berlin

# Node environment
NODE_ENV=development
